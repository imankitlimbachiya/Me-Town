<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusableInTouchMode="true"
    tools:context=".UI.KeywordAlertActivity">

    <RelativeLayout
        android:id="@+id/TitleLayout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        tools:ignore="UselessLeaf">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/left_arrow"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:padding="12dp"
            tools:ignore="ContentDescription,RtlHardcoded"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/imgBack"
            android:fontFamily="@font/louis_george_cafe"
            android:text="Keyword Alert"
            android:textColor="@color/black"
            android:textSize="17sp"
            tools:ignore="HardcodedText,RtlHardcoded" />

    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/TitleLayout"
        android:background="@color/grey" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/view">

        <LinearLayout
            android:id="@+id/ResponseLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="UselessLeaf">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/alte_haas_grotesk_bold"
                android:text="Keyword Alert"
                android:textColor="@color/black"
                android:textSize="15sp"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="22dp"
                android:fontFamily="@font/louis_george_cafe"
                android:text="Add a keyword to be notified when related posts are\nuploaded"
                android:textColor="@color/black"
                android:textSize="12sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/txtNotGettingNotification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="11dp"
                android:layout_marginRight="22dp"
                android:fontFamily="@font/segoe_ui"
                android:text="Added Keyword Alerts but not getting notifications?"
                android:textColor="@color/redPink"
                android:textSize="10sp"
                tools:ignore="HardcodedText,SmallSp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/round_normal_corner_bg"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="28dp">

                <EditText
                    android:id="@+id/edtKeyword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Try bike"
                    android:textColorHint="@color/grey"
                    android:textColor="@color/grey"
                    android:textSize="13sp"
                    android:inputType="text"
                    android:singleLine="true"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/louis_george_cafe"
                    android:paddingLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:layout_toLeftOf="@id/txtAdd"
                    android:maxLength="30"
                    tools:ignore="Autofill,HardcodedText,RtlHardcoded,RtlSymmetry"/>

                <TextView
                    android:id="@+id/txtAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/louis_george_cafe"
                    android:text="Add"
                    android:textColor="@color/grey"
                    android:textSize="13sp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    tools:ignore="HardcodedText,RtlHardcoded"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/txtKeywordCountAlert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="17dp"
                android:fontFamily="@font/alte_haas_grotesk_regular"
                android:text="Keyword Alerts (0/30)"
                android:textColor="@color/darkGrey"
                android:textSize="14sp"
                tools:ignore="HardcodedText,RtlHardcoded"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:indeterminateTint="@color/colorAccent"
        android:indeterminateTintMode="src_atop"
        android:visibility="gone"
        tools:ignore="UnusedAttribute" />

</RelativeLayout>