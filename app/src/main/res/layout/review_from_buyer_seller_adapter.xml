<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgUser"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/circle_outer_border_bg" />

    <TextView
        android:id="@+id/txtNickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="17dp"
        android:layout_toRightOf="@id/imgUser"
        android:fontFamily="@font/alte_haas_grotesk_bold"
        android:singleLine="true"
        android:text="'Nickname'"
        android:textColor="@color/black"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/txtAddressAndDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtNickName"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/imgUser"
        android:fontFamily="@font/louis_george_cafe"
        android:singleLine="true"
        android:text="'Address'  'Date'"
        android:textColor="@color/darkGrey"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/txtGoReview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtAddressAndDate"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@id/imgUser"
        android:background="@drawable/round_after_medium_bg"
        android:backgroundTint="@color/lightWhite"
        android:fontFamily="@font/louis_george_cafe"
        android:padding="10dp"
        android:text="'The review goes here'"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/txtGoReview"
        android:layout_marginTop="15dp"
        android:background="@color/grey" />

</RelativeLayout>