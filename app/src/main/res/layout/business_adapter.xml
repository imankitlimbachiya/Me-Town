<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="188dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="20dp"
    android:background="@drawable/round_before_full_corner_dark_bg"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txtBusinessName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/alte_haas_grotesk_bold"
        android:text="'Business name'"
        android:textColor="@color/black"
        android:textSize="17sp"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <View
        android:id="@+id/TopView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/txtBusinessName"
        android:layout_marginTop="18dp"
        android:background="@color/veryDarkSkyPink" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/BottomView"
        android:layout_below="@id/TopView"
        android:orientation="horizontal"
        tools:ignore="DisableBaselineAlignment,UselessLeaf">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="10dp"
            android:orientation="vertical"
            tools:ignore="RtlHardcoded">

            <TextView
                android:id="@+id/txtPosition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/louis_george_cafe"
                android:text="Position"
                android:textColor="@color/grey"
                android:textSize="14sp"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <TextView
                android:id="@+id/txtSalary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/louis_george_cafe"
                android:text="Salary"
                android:textColor="@color/grey"
                android:textSize="14sp"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <TextView
                android:id="@+id/txtWorkingTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/louis_george_cafe"
                android:text="Working time"
                android:textColor="@color/grey"
                android:textSize="14sp"
                tools:ignore="HardcodedText,RtlHardcoded" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="10dp"
            android:orientation="vertical"
            tools:ignore="RtlHardcoded">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/louis_george_cafe"
                android:text="Position"
                android:textColor="@color/veryDarkGrey"
                android:textSize="14sp"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/louis_george_cafe"
                android:text="Salary"
                android:textColor="@color/veryDarkGrey"
                android:textSize="14sp"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/louis_george_cafe"
                android:text="Working time"
                android:textColor="@color/veryDarkGrey"
                android:textSize="14sp"
                tools:ignore="HardcodedText,RtlHardcoded" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/BottomView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@id/txtCheckTheSiteOnMap"
        android:background="@color/veryDarkSkyPink" />

    <TextView
        android:id="@+id/txtCheckTheSiteOnMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:fontFamily="@font/alte_haas_grotesk_regular"
        android:text="check the site on map"
        android:textColor="@color/yellow"
        android:textSize="14sp"
        tools:ignore="HardcodedText,RtlHardcoded" />

</RelativeLayout>