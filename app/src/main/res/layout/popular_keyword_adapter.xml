<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="30dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txtKeywordCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/louis_george_cafe"
        android:singleLine="true"
        android:text="1"
        android:textColor="@color/veryDarkSkyPink"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txtKeyword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/alte_haas_grotesk_regular"
        android:singleLine="true"
        android:text="Digital / Gadget"
        android:textColor="@color/darkGrey"
        android:textSize="14sp" />

</LinearLayout>